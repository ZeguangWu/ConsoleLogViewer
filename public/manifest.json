{
  "name": "Loop Dev Extension",
  "description": "A DevTools Extension for Loop",
  "manifest_version": 3,
  "version": "1.0",
  "devtools_page": "devtools.html",
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": ["inject_consoleLog.js", "inject_imagePopup.js", "inject_consoleLog.js.map", "inject_imagePopup.js.map"]
    }
  ],
  "permissions": ["tabs", "scripting", "storage"],
  "host_permissions": ["http://*/*", "https://*/*"]
}
